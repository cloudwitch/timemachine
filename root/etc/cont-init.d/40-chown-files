#!/usr/bin/with-contenv bash

#Â create folders
if [ ! -d "/timemachine" ]; then \
mkdir -p "/timemachine"
chown -R abc:abc /timemachine /config /var/log/netatalk.log
fi

# check Library permissions
PUID=${PUID:-911}
if [ ! "$(stat -c %u /config)" = "$PUID" ]; then
	echo "Change in ownership detected, please be patient while we chown existing files"
	echo "This could take some time"
	chown abc:abc -R \
	/config /var/log/netatalk.log
fi

if [ ! "$(stat -c %u /timemachine)" = "$PUID" ]; then
	echo "Change in ownership detected, please be patient while we chown existing files"
	echo "This could take some time"
	chown abc:abc -R \
	/timemachine /var/log/netatalk.log
fi

# permissions (non-recursive) on config root and folders
chown abc:abc \
	/config \
	/config/*\
	/timemachine \
	/timemachine/* \
	/var/log/netatalk.log
